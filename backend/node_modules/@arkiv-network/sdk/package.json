{
  "name": "@arkiv-network/sdk",
  "version": "0.1.0",
  "description": "TypeScript-only client library for Arkiv blockchain interactions",
  "type": "module",
  "main": "./dist/_cjs/index.js",
  "module": "./dist/_esm/index.js",
  "types": "./dist/_types/index.d.ts",
  "typings": "./dist/_types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/_types/index.d.ts",
      "import": "./dist/_esm/index.js",
      "default": "./dist/_cjs/index.js"
    },
    "./chains": {
      "source": "./src/chains/index.ts",
      "types": "./dist/_types/chains/index.d.ts",
      "import": "./dist/_esm/chains/index.js",
      "default": "./dist/_cjs/chains/index.js"
    },
    "./accounts": {
      "source": "./src/accounts/index.ts",
      "types": "./dist/_types/accounts/index.d.ts",
      "import": "./dist/_esm/accounts/index.js",
      "default": "./dist/_cjs/accounts/index.js"
    },
    "./utils": {
      "source": "./src/utils/index.ts",
      "types": "./dist/_types/utils/index.d.ts",
      "import": "./dist/_esm/utils/index.js",
      "default": "./dist/_cjs/utils/index.js"
    },
    "./query": {
      "source": "./src/query/index.ts",
      "types": "./dist/_types/query/index.d.ts",
      "import": "./dist/_esm/query/index.js",
      "default": "./dist/_cjs/query/index.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "chains": [
        "./dist/_types/chains/index.d.ts"
      ],
      "accounts": [
        "./dist/_types/accounts/index.d.ts"
      ],
      "utils": [
        "./dist/_types/utils/index.d.ts"
      ],
      "query": [
        "./dist/_types/query/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "scripts": {
    "build": "rimraf dist && bun run build:cjs && bun run build:esm && bun run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "postbuild": "rimraf *.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "package": "rimraf arkiv-network-sdk-*.tgz && bun run build && bun pm pack --no-cache",
    "package:test": "bun run package && mv arkiv-network-sdk-*.tgz arkiv-network-sdk-latest.tgz",
    "prepublishOnly": "bun run build && bun run package && mv arkiv-network-sdk-*.tgz arkiv-network-sdk-latest.tgz",
    "publish-main": "npm publish ./arkiv-network-sdk-latest.tgz --access public",
    "publish-main:dry": "npm publish ./arkiv-network-sdk-latest.tgz --access public --dry-run",
    "publish-dev": "npm version prerelease --preid=dev && npm publish ./arkiv-network-sdk-latest.tgz --access public --tag dev",
    "publish-dev:dry": "npm version prerelease --preid=dev && npm publish ./arkiv-network-sdk-latest.tgz --access public --tag dev --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "typescript",
    "blockchain",
    "golem",
    "arkiv",
    "golemdb",
    "ethereum",
    "viem"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Arkiv-Network/arkiv-sdk-js.git"
  },
  "dependencies": {
    "@bokuweb/zstd-wasm": "^0.0.27",
    "@oneidentity/zstd-js": "^1.0.3",
    "viem": "^2.38.2"
  }
}
